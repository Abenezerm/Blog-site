<div class="edit-blog">
    <div class="edit-header">
      <h2>📝 Edit Post</h2>
    </div>
    <form id="edit-post-form" class="edit-body">
    <input type="hidden" name="post-id" value="{{post.id}}" />

    <label class="form-label" for="post-title">Title</label>
    <input type="text" name="post-title" class="text-area" value="{{post.title}}" class="form-input" />

    <label class="form-label" for="post-body">Content</label>
    <textarea name="post-body" class="form-input text-area">{{post.body}}</textarea>

    <button type="submit" class="edit-btn btn">Update</button>

    <button type="button" id="delete-btn" class="edit-btn btn">Delete</button>
  </form>
  </div>
