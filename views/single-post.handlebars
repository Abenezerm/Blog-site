<div class="single-post">
  <article class="card">
    <div class="card-header">
      <h2>ðŸ“– {{post.title}}</h2>
      <div class="card-details">
        Posted by {{post.User.username}} <br> On {{format_date post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </article>

  {{#if post.Comments}}
    <section class="comment-body">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="">
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{User.username}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card-comment-forum">

    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-comment">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <textarea name="comment-body" class="form-input"></textarea><br>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>
